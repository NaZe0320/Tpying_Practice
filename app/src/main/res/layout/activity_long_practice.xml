<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LongPracticeActivity">
    
    <TextView
        android:id="@+id/tv_main_sentence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="@dimen/margin_2"
        android:layout_marginStart="@dimen/margin_2"
        android:layout_marginRight="@dimen/margin_2"
        android:layout_marginEnd="@dimen/margin_2"
        android:layout_marginBottom="@dimen/margin_1"
        android:text="메인 문장"
        android:textSize="@dimen/main_sentence_textSize"
        android:textColor="@color/black"
        android:fontFamily="@font/maplestory_bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/border_layout"
        android:bufferType="spannable"
        android:padding="8dp">

    </TextView>

    <TextView
        android:id="@+id/tv_sub_sentence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:text="서브 문장"
        android:textSize="@dimen/sub_sentence_textSize"
        android:textColor="#888888"
        android:fontFamily="@font/maplestory_bold"
        android:layout_below="@+id/tv_main_sentence">

    </TextView>

    <LinearLayout
        android:id="@+id/ll_sentence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_2"
        android:layout_marginLeft="@dimen/margin_2"
        android:layout_marginStart="@dimen/margin_2"
        android:layout_marginRight="@dimen/margin_2"
        android:layout_marginEnd="@dimen/margin_2"
        android:layout_marginBottom="@dimen/margin_1"
        android:layout_below="@+id/tv_sub_sentence"
        android:orientation="horizontal"
        android:weightSum="5">

        <EditText
            android:id="@+id/et_sentence"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="입력"
            android:textSize="@dimen/main_sentence_textSize"
            android:textColor="@color/black"
            android:fontFamily="@font/maplestory_bold"
            android:background="@drawable/border_layout"
            android:padding="8dp"
            android:enabled="false"
            android:layout_gravity="center_vertical"
            android:layout_weight="4">

        </EditText>

        <Button
            android:id="@+id/btn_enter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="입력"
            android:enabled="false"
            android:textSize="@dimen/btn_textSize"
            android:textColor="@color/white"
            android:fontFamily="@font/maplestory_bold"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

        </Button>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:padding="12dp"
        android:weightSum="2"
        android:layout_below="@id/ll_sentence"
        android:background="@drawable/border_layout">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="타수"
                android:fontFamily="@font/maplestory_light"
                android:textColor="@color/black"
                android:textSize="@dimen/info_textSize"
                android:layout_marginBottom="4dp"
                android:gravity="center">

            </TextView>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="진행시간"
                android:fontFamily="@font/maplestory_light"
                android:textColor="@color/black"
                android:textSize="@dimen/info_textSize"
                android:layout_marginBottom="4dp"
                android:gravity="center">

            </TextView>

            <TextView
                android:id="@+id/tv_process"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="진행도"
                android:fontFamily="@font/maplestory_light"
                android:textColor="@color/black"
                android:textSize="@dimen/info_textSize"
                android:layout_marginBottom="4dp"
                android:gravity="center">

            </TextView>

            <TextView
                android:id="@+id/tv_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="오타율"
                android:fontFamily="@font/maplestory_light"
                android:textColor="@color/black"
                android:textSize="@dimen/info_textSize"
                android:gravity="center">

            </TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_txt_cnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0타"
                android:fontFamily="@font/maplestory_light"
                android:textColor="@color/black"
                android:textSize="@dimen/info_textSize"
                android:layout_marginBottom="4dp"
                android:gravity="center">

            </TextView>

            <TextView
                android:id="@+id/tv_time_cnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:fontFamily="@font/maplestory_light"
                android:textColor="@color/black"
                android:textSize="@dimen/info_textSize"
                android:layout_marginBottom="4dp"
                android:gravity="center">

            </TextView>

            <TextView
                android:id="@+id/tv_process_cnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00/00"
                android:fontFamily="@font/maplestory_light"
                android:textColor="@color/black"
                android:textSize="@dimen/info_textSize"
                android:layout_marginBottom="4dp"
                android:gravity="center">

            </TextView>

            <TextView
                android:id="@+id/tv_error_cnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100%"
                android:fontFamily="@font/maplestory_light"
                android:textColor="@color/black"
                android:textSize="@dimen/info_textSize"
                android:gravity="center">

            </TextView>


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:text="시작하기"
        android:fontFamily="@font/maplestory_light"
        android:textSize="16sp"/>


</RelativeLayout>